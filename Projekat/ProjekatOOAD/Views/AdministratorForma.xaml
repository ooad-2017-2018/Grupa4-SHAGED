        <Pivot Title="Administracija">
            <PivotItem Name="DodajPonude" Header="Dodaj ponude">
                <Grid>
                    <Grid.Background>
                        <ImageBrush Stretch="Fill" ImageSource="Assets/zanzibar.jpg"/>
                    </Grid.Background>
                    <TextBlock Name="LimePonude" HorizontalAlignment="Left"  Text="Ime ponude:" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBlock Name="Lslika" HorizontalAlignment="Left"  Text="Link slike:" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBox Name="TimePonude" HorizontalAlignment="Left" VerticalAlignment="Top" Width="188"
                             Text="{Binding Path = naziv, Mode=TwoWay}"/>
                    <TextBox InputScope="Number" Name="TbrojDana" HorizontalAlignment="Left" PlaceholderText="Broj dana" VerticalAlignment="Top" Width="188"
                             Text="{Binding Path = brojDana, Mode=TwoWay}"/>
                    <TextBox Name="slika"  HorizontalAlignment="Left" Height="63"  VerticalAlignment="Top" Width="187"
                             Text="{Binding Path = slika, Mode=TwoWay}"/>
                    <TextBlock Name="LopisPonude" HorizontalAlignment="Left"  Text="Opis ponude:" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBox Name="TopisPonude" HorizontalAlignment="Left" VerticalAlignment="Top" Width="188" Height="63" Margin="225,247,0,0"
                             Text="{Binding Path = planPutovanja, Mode=TwoWay}"/>
                    <TextBlock Name="LlinkHotela" HorizontalAlignment="Left"  Text="Link hotela:" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBox Name="TlinkHoela" HorizontalAlignment="Left" VerticalAlignment="Top" Width="188"
                             Text="{Binding Path = hotel, Mode=TwoWay}"/>
                    <TextBlock Name="LlinkKamera" HorizontalAlignment="Left"  Text="Link kamere:" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBox Name="TlinkKamera" HorizontalAlignment="Left" VerticalAlignment="Top" Width="188"
                             Text="{Binding Path = liveCamera, Mode=TwoWay}"/>
                    <TextBlock Name="LvremenskaProg" HorizontalAlignment="Left"  Text="Link vremenske prognoze:" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBox Name="TvremenskaProg" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="188"
                             Text="{Binding Path = vremenskaPrognoza, Mode=TwoWay}"/>
                    <TextBlock Name="Lznamenitosti" HorizontalAlignment="Left" Text="Link za znamenitosti:" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBox Name="Tznamenitosti" HorizontalAlignment="Left" VerticalAlignment="Top" Width="188"
                             Text="{Binding Path = znamenitosti, Mode=TwoWay}"/>
                    <Button Name="dNazadDodaj" Content="NAZAD" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="42" Width="211"
                            Command="{Binding Path = LogoutAdmin}"/>
                    <Button Name="dDodaj" Content="DODAJ PONUDU" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="42" Width="211"
                            Command="{Binding Path = dodajPonudu}"/>



                </Grid>
            </PivotItem>
            <PivotItem Name="ObrisiPonude" Header="Obrisi ponude">
                <Grid>
                    <Image Source="Assets/zanzibar.jpg"/>
                    <Button Name="dNazadObrisi" Content="NAZAD" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="42" Width="150"
                            Command="{Binding Path = LogoutAdmin}"/>
                    <Button Name="dObrisi" Content="OBRISI PONUDU" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="42" Width="150"
                            Command="{Binding Path = obrisiPonudu}"/>
                    <ListView Name="comboPonudeObrisi" SelectedItem="{Binding Path=ponudaZaBrisanje, Mode=TwoWay}" Loaded ="comboPonudeObrisi_Loaded"  ItemClick="comboPonudeObrisi_ItemClick" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="36" Width="188"
                              />


                    <TextBlock Name="LodaberiPonuduObrisi" HorizontalAlignment="Left"  Text="Odaberite ponudu:" TextWrapping="Wrap" VerticalAlignment="Top"/>

                </Grid>
            </PivotItem>
            <PivotItem Name="AzurirajPonude" Header="Azuriraj ponude">
                <Grid>
                    <Image Source="Assets/zanzibar.jpg"/>
                    <TextBlock Name="LimePonude1"  HorizontalAlignment="Left" Text="Ime ponude:" TextWrapping="Wrap" VerticalAlignment="Top"/>

                    <TextBlock Name="Lslika1" HorizontalAlignment="Left" Text="Slika:" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBox Name="TimePonude1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="188" 
                             Text="{Binding Path = naziv1, Mode=TwoWay}"/>
                    <TextBox Name="slika1" HorizontalAlignment="Left" Height="80"  VerticalAlignment="Top" Width="188"
                             Text="{Binding Path = slika1, Mode=TwoWay}"/>
                    <TextBlock Name="Lopis1" HorizontalAlignment="Left" Text="Opis ponude:" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBox Name="Topis1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="188" Height="80"
                             Text="{Binding Path = planPutovanja1, Mode=TwoWay}"/>
                    <TextBlock Name="LlinkHotela1" HorizontalAlignment="Left"  Text="Link hotela:" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBox Name="TlinkHotela1" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="188"
                             Text="{Binding Path = hotel1, Mode=TwoWay}"/>
                    <TextBlock Name="LlinkKamera1" HorizontalAlignment="Left" Text="Link kamere:" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBox Name="TlinkKamera1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="188"
                             Text="{Binding Path = liveCamera1, Mode=TwoWay}"/>
                    <TextBlock Name="LvremenskaProg1" HorizontalAlignment="Left"  Text="Link vremenske prognoze:" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBox Name="TvremenskaProg1" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="188"
                             Text="{Binding Path = vremenskaPrognoza1, Mode=TwoWay}"/>
                    <TextBlock Name="Lznamenitosti1" HorizontalAlignment="Left"  Text="Link za znamenitosti:" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBox Name="Tznamenitosti1" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="188"
                             Text="{Binding Path = znamenitosti1, Mode=TwoWay}"/>
                    <Button Name="dNazadAzuriraj" Content="NAZAD" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="42" Width="150"
                            Command="{Binding Path = LogoutAdmin}"/>
                    <Button Name="dAzuriraj" Content="AZURIRAJ" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="42" Width="150"
                            Command="{Binding Path = izmijeniPonudu}"/>



                    <TextBlock Name="LodaberiPonuduAzuriraj" HorizontalAlignment="Left" Text="Odaberite ponudu:" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <ListView Name="comboPonudeAzuriraj" SelectedItem="{Binding Path=ponudaZaMijenjanje, Mode=TwoWay}" Loaded ="comboPonudeAzuriraj_Loaded"  ItemClick="comboPonudeAzuriraj_ItemClick"  HorizontalAlignment="Left"  VerticalAlignment="Top" Height="36" Width="188"
                              />


                </Grid>
            </PivotItem>
            <PivotItem Name="Putovanja" Header="Putovanja i putnici">
                <Grid>
                    <Image Source="Assets/zanzibar.jpg"/>
                    <Button Name="dNazadPutovanja" Content="NAZAD" HorizontalAlignment="Left"  VerticalAlignment="Top" FontSize="10" Height="42" Width="150"
                            Command="{Binding Path = LogoutAdmin}"/>
                    <Button Name="dObrisiPutnike" Content="OBRISI STARE PUTNIKE" HorizontalAlignment="Left" FontSize="10" VerticalAlignment="Top" Height="42" Width="150"
                            Command="{Binding Path = obrisiNeaktivneKorisnike}"/>
                    <Button Name="dDodajPutovanje" Content="DODAJ PUTOVANJE" HorizontalAlignment="Left" FontSize="10" VerticalAlignment="Top" Height="42" Width="150"
                            Command="{Binding Path = dodajPutovanje}"/>
                    <ListView Name="comboPonudePutovanja" SelectedItem="{Binding Path=opis, Mode=TwoWay}" Loaded ="comboPonudePutovanja_Loaded"  ItemClick="comboPonudePutovanja_ItemClick" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="36" Width="188"
                              />

                    <Button Name="dOsvjeziPutovanja" Content="OSVJEZI PUTOVANJA" HorizontalAlignment="Left" FontSize="10"  VerticalAlignment="Top" Height="42" Width="150"
                            Command="{Binding Path = osvjeziPutovanja}"/>
                    <TextBlock Name="LcomboPonudePutovanja" HorizontalAlignment="Left" Text="Odaberite ponudu:" TextWrapping="Wrap" VerticalAlignment="Top"/>

                    <TextBlock Name="Ldatumpovratka" HorizontalAlignment="Left" Text="Datum povratka:" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBlock Name="LdatumPolaska" HorizontalAlignment="Left" Text="Datum polaska:" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBox Name="Tkapacitet" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="188" PlaceholderText="Kapacitet"
                             Text="{Binding Path = strKapacitet, Mode=TwoWay}"/>
                    <TextBox Name="Tcijena" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="188" PlaceholderText="Cijena"
                             Text="{Binding Path = strCijena, Mode=TwoWay}"/>
                    <DatePicker Name="Polazak" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="188" 
                                Date="{Binding Path= polazak, Mode=TwoWay}"/>
                    <DatePicker Name="Povratak" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="188" 
                                Date="{Binding Path= povratak, Mode=TwoWay}"/>
                </Grid>
            </PivotItem>
        </Pivot>

    </Grid>
</Page>
