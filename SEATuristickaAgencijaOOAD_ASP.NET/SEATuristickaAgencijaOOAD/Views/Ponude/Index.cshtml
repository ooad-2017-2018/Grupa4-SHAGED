@{
    ViewBag.Title = "Ponude";
}
<html>
<head>
    <style>
        #container {
            background-color: green;
            width: 100%;
            height: 100px;
        }

        .ponuda {
            background-color: red;
            width: 33%;
            height: 60px;
            border: 1px solid #000;
            float: left;
        }
    </style>
</head>
<body>
    <div class="main">
        <div class="jumbotron" resource="">
            <h1>Travel the world!</h1>
        </div>
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <img src="@Html.Action("vratiSliku", "OpisPutovanja", new { id = item.opisPonudeID })" width="272" height="180" alt="Moskva" class="responsive">
                <h3>@Html.Action("vratiIme", "OpisPutovanja", new { id = item.opisPonudeID })</h3>

                <html>
                <body>
                    <p style="text-align:center">@Html.Action("vratiDatum", "Putovanje", new { datum = item.datumPolaska, datum1 = item.datumPovratka })</p>
                </body>
            </html>
            <p>
                <head>
                    <meta name="viewport" content="width=device-width, initial-scale=1">
                    <style>
                        .block {
                            display: block;
                            width: 100%;
                            border: none;
                            background-color: #4CAF50;
                            color: white;
                            padding: 14px 28px;
                            font-size: 16px;
                            cursor: pointer;
                            text-align: center;
                        }

                            .block:hover {
                                background-color: #ddd;
                                color: black;
                            }
                    </style>
                </head>

            </p>
            <br> <br />
        </div>
    }
</body>

</html>