<div class="row">

    <div class="col-md-4">

        <div class="form-group">
            <div class="col-md-offset-5 col-md-8">
                <input type="submit" value="Rezervisi" class="btn btn-primary" onclick="location.href='@Url.Action("Rezervacija", "OpisPutovanja")'" />
            </div>
        </div>
