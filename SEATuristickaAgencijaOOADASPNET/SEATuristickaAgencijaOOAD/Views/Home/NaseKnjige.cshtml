@model List<SEATuristickaAgencijaOOAD.Models.Knjiga>
@using Microsoft.AspNet.Identity
@{
    
   

    ViewBag.Title = "Ponude";
}


<html>
<head>
    <style>
        #container {
            background-color: green;
            width: 100%;
            height: 100px;
        }

        .ponuda {
            background-color: red;
            width: 33%;
            height: 60px;
            border: 1px solid #000;
            float: left;
        }
    </style>
</head>
<body>
    <div class="main">
        <div class="jumbotron" resource="">
            <h2>Naše preporuke knjiga za savršeno putovanje !</h2>
        </div>
        <p>@Html.ValidationMessage("pokazi", new { @style = "color:red" })</p>
        @foreach (SEATuristickaAgencijaOOAD.Models.Knjiga item in Model)
        {
        <div class="col-md-6">
            <h3>@Html.Action("dajNaziv", "NaseKnjige", new { knjiga=item})</h3>
            


            <p>
                <head>
                    <meta name="viewport" content="width=device-width, initial-scale=1">
                    <style>
                        .block {
                            display: block;
                            width: 100%;
                            border: none;
                            background-color: #4CAF50;
                            color: white;
                            padding: 14px 28px;
                            font-size: 16px;
                            cursor: pointer;
                            text-align: center;
                        }

                            .block:hover {
                                background-color: #ddd;
                                color: black;
                            }
                    </style>
                </head>
                <body>
                    @using Microsoft.AspNet.Identity
                    @if (Request.IsAuthenticated)
            {
                <button class="block" onclick="location.href='@Url.Action("Rezervacija", "Ponude")'">Rezerviši</button>
    }

                </body>
            </p>
            <br> <br />
        </div>
    }
</body>

</html>